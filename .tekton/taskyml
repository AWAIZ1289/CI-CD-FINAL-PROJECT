apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: ci-task
spec:
  workspaces:
    - name: source
  steps:
    - name: fetch-source
      image: alpine/git:latest
      workingDir: /workspace/source
      script: |
        set -e
        mkdir -p /workspace/source
        git clone https://github.com/awaiz1289/CI-CD-FINAL-PROJECT.git /workspace/source || (cd /workspace/source && git pull)

    - name: install-deps
      image: python:3.9-slim
      workingDir: /workspace/source
      script: |
        set -e
        # install into workspace-local prefix so no root required
        python -m pip install --no-cache-dir --prefix=/workspace/.local -r requirements.txt

    - name: lint
      image: python:3.9-slim
      workingDir: /workspace/source
      script: |
        set -e
        # make sure python finds packages and executables from workspace-local
        export PATH=/workspace/.local/bin:$PATH
        export PYTHONPATH=/workspace/.local/lib/python3.9/site-packages:$PYTHONPATH
        # run flake8 using python module so same interpreter loads the site-packages
        python -m flake8 service --count --select=E9,F63,F7,F82 --show-source --statistics || true
        python -m flake8 service --count --max-complexity=10 --max-line-length=127 --statistics

    - name: unit-tests
      image: python:3.9-slim
      workingDir: /workspace/source
      script: |
        set -e
        export PATH=/workspace/.local/bin:$PATH
        export PYTHONPATH=/workspace/.local/lib/python3.9/site-packages:$PYTHONPATH
        # run tests with python module to ensure same interpreter environment
        python -m nose -v --with-spec --spec-color --with-coverage --cover-package=app
